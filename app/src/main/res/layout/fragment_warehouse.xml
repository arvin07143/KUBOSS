<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="warehouseViewModel"
                type="com.example.kuboss.warehouse.WarehouseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".warehouse.WarehouseFragment"
            android:padding="16dp">




        <Button
                android:text="Edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_rack_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/add_rack_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp" />

        <Button
                android:text="Add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_rack_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_rack_button"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rack_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/add_rack_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>