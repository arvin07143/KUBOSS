<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/imageView2" android:layout_height="wrap_content" android:layout_width="wrap_content"  app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent" android:adjustViewBounds="true" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:srcCompat="@drawable/pic_warehouse"/>

    <EditText
            android:id="@+id/etLoginEmail"
            android:layout_height="53dp"
            android:layout_width="308dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints=""
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/etLoginPassword"
            android:ems="10"
            android:text="Email"
            android:inputType="textPersonName" />

    <TextView
            android:id="@+id/tvLogin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintVertical_bias="0.548"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etLoginEmail"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/etLoginPassword"
            android:layout_height="53dp"
            android:layout_width="308dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            android:ems="10"
            android:text="Password"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            android:singleLine="false"
            android:selectAllOnFocus="false" />

    <Button
            android:id="@+id/btn_login"
            android:layout_height="53dp"
            android:layout_width="250dp"
            app:layout_constraintHorizontal_bias="0.559"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="144dp"
            android:text="Login" />



</androidx.constraintlayout.widget.ConstraintLayout>


